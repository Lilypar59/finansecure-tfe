# ════════════════════════════════════════════════════════════════════════════════
# 🔐 FinanSecure - Environment Configuration Template
# ════════════════════════════════════════════════════════════════════════════════
#
# INSTRUCCIONES:
#  1. Copiar este archivo a .env (no va al repo)
#  2. Llenar los valores CHANGE_ME con tus secretos locales
#  3. NUNCA commitear el archivo .env
#  4. Ejecutar: ./generate-secrets.sh para generar claves seguras
#
# ════════════════════════════════════════════════════════════════════════════════
# 🔧 ENTORNO
# ════════════════════════════════════════════════════════════════════════════════
ASPNETCORE_ENVIRONMENT=Development
ENVIRONMENT=Development

# ════════════════════════════════════════════════════════════════════════════════
# 🗄️  BASE DE DATOS - PostgreSQL Auth Service
# ════════════════════════════════════════════════════════════════════════════════
# Auth DB: Usuarios, contraseñas, roles
AUTH_DB_PASSWORD=CHANGE_ME_TO_SECURE_VALUE
AUTH_DB_PORT=5432
AUTH_DB_USER=auth_user
AUTH_DB_NAME=finansecure_auth_db

# ════════════════════════════════════════════════════════════════════════════════
# 🔐 JWT - Token Security
# ════════════════════════════════════════════════════════════════════════════════
# IMPORTANTE: Generar con: openssl rand -hex 32
# MÍNIMO: 32 caracteres, alfanuméricos seguros
JWT_SECRET_KEY=CHANGE_ME_MIN_32_CHARS_LONG_OPENSSL_RAND_HEX_32
JWT_ISSUER=FinanSecure
JWT_AUDIENCE=FinanSecure.Client
JWT_EXPIRATION_MINUTES=15
JWT_REFRESH_EXPIRATION_DAYS=7

# ════════════════════════════════════════════════════════════════════════════════
# 🌐 PUERTOS DE SERVICIOS
# ════════════════════════════════════════════════════════════════════════════════
# Frontend (NGINX + Angular SPA)
FRONTEND_PORT=80

# Backend (Auth Service)
AUTH_SERVICE_PORT=8080

# Website (Marketing/Info)
WEBSITE_PORT=3000

# PgAdmin (Gestión de BD - SOLO DESARROLLO)
PGADMIN_PORT=5050

# ════════════════════════════════════════════════════════════════════════════════
# 📊 PgAdmin - Database Management (SOLO DESARROLLO)
# ════════════════════════════════════════════════════════════════════════════════
# ⚠️ Cambiar password de admin en local
PGADMIN_EMAIL=admin@finansecure.com
PGADMIN_PASSWORD=CHANGE_ME_PGADMIN_PASSWORD

# ════════════════════════════════════════════════════════════════════════════════
# 📊 LOGGING
# ════════════════════════════════════════════════════════════════════════════════
AUTH_LOG_LEVEL=Information

